---
import "@/core/styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "@/core/components/organisms/Header.astro";
import ProfileCard from "@/core/components/organisms/ProfileCard.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
const locale = Astro.currentLocale!;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merienda:wght@300..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Victor+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">    <meta name="generator" content={Astro.generator} />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class="main">
      <div class="left">
        <ProfileCard />
        <slot name="card" />
      </div>
      <main id="main">
        <slot/>
      </main>
    </div>
  </body>
</html>
<script>
  document.addEventListener("astro:page-load", ()=> {
    const top = localStorage.getItem("scrollY");
    if(!top) return;
  })
</script>