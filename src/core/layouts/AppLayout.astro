---
import "@/core/styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "@/core/components/organisms/Header.astro";
import ProfileCard from "@/core/components/organisms/ProfileCard.astro";
import Footer from "@/core/components/organisms/Footer.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
const locale = Astro.currentLocale!;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <div class="left">
        <ProfileCard/>
      </div>
      <div class="right">
        <div class="main">
          <slot />
        </div>
        <Footer />
      </div>
    </main>
  </body>
</html>
