---
interface Props {
  content: string;
  subtitle: string;
}
const { content, subtitle } = Astro.props;
---
<li class="grid grid-cols-[32px_1fr] gap-1 items-start">
  <figure class="w-6 h-6">
    <slot />
  </figure>
  <div class="flex flex-col gap-0.5">
    <h5 class="font-bold text-sm lg:text-base">{content}</h5>
    <span class="font-light text-xs lg:text-sm">{subtitle}</span>
  </div>
</li>
