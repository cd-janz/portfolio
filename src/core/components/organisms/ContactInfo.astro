---
import ContactInfoItem from "../atom/ContactInfoItem.astro";
import EmailIcon from "../../assets/icons/system/EmailIcon.astro";
import getPersonData from "../../content/data/person.ts";
import type { Locale } from "../../types/Locales.ts";
import PhoneIcon from "../../assets/icons/system/PhoneIcon.astro";
import LocationIcon from "../../assets/icons/system/LocationIcon.astro";
interface Props {
  titleInfo: string;
  socialInfo: string;
  answer: string;
  schedule: string;
  able: string;
}
const { titleInfo, socialInfo, answer, schedule, able } = Astro.props;
const locale = Astro.currentLocale! as Locale;
const data = await getPersonData(locale);
---
<div class="info_container">
  <div class="sec">
    <h4>{titleInfo}</h4>
    <ul class="flex flex-col gap-2">
      <ContactInfoItem content={data.email} subtitle={answer}>
        <EmailIcon/>
      </ContactInfoItem>
      <ContactInfoItem content={data.phoneNumber} subtitle={schedule}>
        <PhoneIcon />
      </ContactInfoItem>
      <ContactInfoItem content={data.location} subtitle={able}>
        <LocationIcon />
      </ContactInfoItem>
    </ul>
  </div>
  <div class="sec">
    <h4>{socialInfo}</h4>
    <ul class="flex items-center justify-start gap-2">
      {data.social.map( item => (
        <li class="w-fit h-fit">
          <a href={item.path} target="_blank" rel="noopener noreferrer">
            <figure class="w-9 h-9 p-1.5 border-[2px] border-border rounded-md hover:text-text text-text-disabled hover:border-border-focus cursor-pointer">
              <item.icon />
            </figure>
          </a>
        </li>
      ))}
    </ul>
  </div>
</div>
<style is:inline>
  .info_container{
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .sec{
    width: 100%;
    padding: 20px;
    border-radius: 15px;
    border: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  @media (min-width: 678px) and (max-width: 1024px) {
    .info_container {
      flex-direction: row;
      align-items: start;
    }
    .sec{
      height: fit-content;
    }
  }
</style>
